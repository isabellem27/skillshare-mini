{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{asset("./styles/form.css")}}">
    <link rel="stylesheet" href="{{asset("./styles/button.css")}}">
    <div class="formulaire">    
        <div class="bgForm">
            <h1 class="titre">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="field">
                    {{ form_label(registrationForm.firstName, 'Prénom *', {'label_attr': {'class': 'label'}}) }}
                    <div class="control">
                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'input', 'placeholder': 'Prénom'}}) }}
                    </div>
                    {{ form_errors(registrationForm.firstName) }}
                </div>
                <div class="field">
                    {{ form_label(registrationForm.lastName, 'Nom *', {'label_attr': {'class': 'label'}}) }}
                    <div class="control">
                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'input', 'placeholder': 'Nom'}}) }}
                    </div>
                    {{ form_errors(registrationForm.lastName) }}
                </div>
                <div class="field">
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}  
                    {{ form_row(registrationForm.agreeTerms) }}                                                                            
                </div>

                <div class="buttons">
                    <a id="retour" href="{{ app.request.headers.get('referer') }}">Retour</a>
                    <button type="submit" class="btnAction">S'inscrire</button>
                </div> 
            {{ form_end(registrationForm) }}
        </div>
    </div>        
{% endblock %}
